{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", 
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}